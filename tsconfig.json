{
    "compilerOptions": {
      "target": "esnext",
      "module": "esnext",
      "moduleResolution": "node",
      "sourceMap": true,
      "allowJs": true,
      "jsx": "react",
      "noEmit": true,
      "skipLibCheck": true,
      "strict": true,
      "isolatedModules": true,
      "esModuleInterop": true,
      "types": ["dom", "jest"]
    },
    "include": ["lib/**/*"]
  }